import React from "react";

type ProductItem = {
  title: string;
  price?: number;
  buyUrl?: string;
};

export default function ShopSection({ products }: { products: ProductItem[] }) {
  const list = Array.isArray(products) ? products : [];

  return (
    <section className="mt-6">
      <h2 className="text-lg font-semibold">Tienda</h2>

      {list.length === 0 ? (
        <p className="mt-2 text-sm text-neutral-600">Este perfil todavía no tiene productos</p>
      ) : (
        <div className="mt-3 grid gap-3">
          {list.map((p, idx) => (
            <div key={idx} className="rounded-2xl border p-4">
              <div className="font-medium">{p.title}</div>

              <div className="mt-1 text-sm text-neutral-600">
                {typeof p.price === "number" ? `$ ${p.price.toFixed(2)}` : "Precio: consultar"}
              </div>

              {p.buyUrl ? (
                <a
                  href={p.buyUrl}
                  target="_blank"
                  rel="noreferrer"
                  className="mt-3 inline-flex w-full items-center justify-center rounded-xl bg-black px-4 py-2 text-sm font-medium text-white"
                >
                  Comprar
                </a>
              ) : (
                <div className="mt-3 text-xs text-neutral-500">
                  Agrega un Buy URL en tu Dashboard para activar el botón Comprar.
                </div>
              )}
            </div>
          ))}
        </div>
      )}
    </section>
  );
}